{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "pythonVersion": "3.11"

    },
    "deploy": {
      "numReplicas": 1,
      "startCommand": "daphne config.asgi:application --port $PORT --bind 0.0.0.0 -v2",
      "sleepApplication": false,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }